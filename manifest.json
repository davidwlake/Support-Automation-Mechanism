{
    "manifest_version": 2, 
    
    "name": "Support Automation Mechanism",
    "version": "0.1", 
    
    "browser_action": {
        "default_icon":"icon.png",
        "default_popup":"popup.html"
    },

    "content_scripts":[
        {
            "matches": ["http://*/*","https://*/*"],
            "js": ["scraper.js"]
		}
	],
    
    "permissions" : [
        "storage",
        "notifications"
    ]
}